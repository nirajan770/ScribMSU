                    android:background="#DADADC" >
                </View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/line_right_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:minHeight="50dip"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/line_right_label"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="Right:"
                    android:textColor="@android:color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/line_right_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/line_right_label"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textSize="18dp" />
            </RelativeLayout>

            <Button
                android:id="@+id/button_manual_refresh"
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="Update Values"
                android:textSize="20dp"
                android:visibility="gone" />

            <ToggleButton
                android:id="@+id/toggleTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sensor_table"
                android:text="Toggle Timer"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>