<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar_default" />

    <TextView
        android:id="@+id/touch_search_view"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/tool_bar"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:text="Touch to pair the device"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listview_devices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/touch_search_view"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/scan_start"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:text="START SCAN"
        android:textSize="18dp" />

</RelativeLayout><!-- From: file:/C:/Users/Nirajan/AndroidStudioProjects/ScribMSU/app/src/main/res/layout/scan_robot.xml -->